{
	"compilerOptions": {
		"baseUrl": "src",
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES6"],
		"module": "ES2022",
		"moduleResolution": "node",
		"paths": {
			"@application/*": ["application/*"],
			"@domain/*": ["domain/*"],
			"@infra/*": ["infra/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2021",
		"types": ["bun-types", "reflect-metadata"]
	}
}
